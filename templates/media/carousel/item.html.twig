<div class="carousel-item{% if is_active %} active{% endif %}">
    <a
        style="background: {% if media.poster() %}url('{{ asset('images/' ~ (media.poster() ? media.getAsset() : 'missing') ~ '.webp') }}'){% endif %} center no-repeat; aspect-ratio: 1;"
        href="{{ href }}"
        class="d-block w-100"></a>
    <div class="carousel-caption">
        <a
                href="{{ href }}"
                class="h3 bg-black bg-opacity-50 bg-blur-2 rounded-3"
        >
            {{ media.title() }}
            <br/>
            ({{ media.airDate() | date('d.m.Y') }})
        </a>
    </div>
</div>