<div class="carousel-item{% if loop.first %} active{% endif %}">
    <a
        style="background: url(https://image.tmdb.org/t/p/w300{{ movie.getPoster() }}) center top no-repeat;background-size: cover;aspect-ratio: 1;"
        href="{{ url('movie-player', { movie: movie.getId() }) }}"
        class="d-block w-100"
    ></a>
    <div class="carousel-caption">
        <h3
            class="bg-black bg-opacity-50 bg-blur-2 rounded-3"
        >{{ movie.getTitle() }}<br/>({{ movie.getYear() }})</h3>
    </div>
</div>