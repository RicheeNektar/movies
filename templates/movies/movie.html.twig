<a
        style="background: url(https://image.tmdb.org/t/p/w300{{ movie.getPoster() }}) center top no-repeat;background-size: cover;aspect-ratio: 1;"
        href="{{ url('movie-player', { movie: movie.getId() }) }}"
        class="col border rounded-3 p-3 border-primary"
>
    {% if user.hasWatched(movie) %}
        <img
            class="position-fixed bg-success p-1 rounded-circle"
            width="40px"
            height="40px"
            src="{{ asset('eye.svg') }}"
            alt="watched"
        />
    {% endif %}

    <h3
            class="bg-black bg-opacity-50 bg-blur-2 rounded-3 text-center position-relative translate-middle-y top-50"
    >
        {{ movie.getTitle() }}<br/>({{ movie.getYear() }})
    </h3>
</a>