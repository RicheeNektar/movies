{% extends 'base.html.twig' %}

{% block title %}
    {{ season_count }} Serien
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container border-2 rounded-3 p-3 bg-black bg-opacity-50" style="backdrop-filter: blur(12px)">
        <div class="row container">
            <div class="col-12 col-lg-8 order-lg-2">
                <h1>Staffeln: </h1>

                {% if seasons | length == 0 %}
                    {% include 'movies/no_movies.html.twig' %}
                {% else %}
                    {% include 'media/scroller/index.html.twig' with {'medias': seasons, 'route': 'tv-player', 'episode': 1} only %}
                {% endif %}

                {% include 'pagination.part.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
