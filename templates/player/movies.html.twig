{% extends 'player/index.html.twig' %}

{% block title %}{{ movie.title() }}{% endblock %}

{% block og_description %}{{ movie.description() }}{% endblock %}
{% block og_image %}{{ movie.poster() }}{% endblock %}

{% block back_path %}{{ url('movies') }}{% endblock %}

{% block player_source %}
    <source src="{{ url('movie-file', { movie: movie.id(), token: user().accessToken() }) }}" type="video/mp4">
{% endblock %}
